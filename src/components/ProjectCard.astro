---
const { title, description, tools = [], href } = Astro.props;
---

<article class="project-card br3 pa4">
  <h3 class="mt0 mb2 f4 near-white">{title}</h3>

  <p class="description mt0 mb3 lh-copy">
    {description}
  </p>

  <ul class="tools list pa0 ma0 mb3">
    {tools.map((tool) => <li class="tool-pill">{tool}</li>)}
  </ul>

  <a
    class="project-link link"
    href={href}
    target="_blank"
    rel="noopener noreferrer"
  >
    View Project â†’
  </a>
</article>

<style>
  .project-card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-link {
    margin-top: auto; /* pushes link to bottom */
  }

  .project-card:hover {
    transform: translateY(-2px);
    border-color: rgba(99, 102, 241, 0.45);
    background: rgba(255, 255, 255, 0.04);
  }

  .description {
    color: #cbd5e1;
  }

  .tools {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tool-pill {
    list-style: none;
    font-size: 0.8rem;
    color: #cbd5e1;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.03);
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
  }

  .project-link {
    color: #a5b4fc;
    font-weight: 500;
    text-decoration: none;
  }

  .project-link:hover {
    color: #c7d2fe;
    text-decoration: underline;
  }
</style>
