---
type Props = {
  href: string;
  label: string;
  external?: boolean;
  class?: string;
};

const { href, label, external = true, class: className = "" } = Astro.props;

import styles from "./SocialIcon.module.scss";
---

<a
  class={`${styles.root} ${className}`}
  href={href}
  aria-label={label}
  title={label}
  {...(external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
>
  <slot />
</a>
