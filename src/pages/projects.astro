---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

import { dataProjects, fullStackProjects } from "../data/projects.js";
---

<Layout pageTitle="Projects">
  <main class="wrap">
    <header class="header">
      <h1>Projects</h1>
      <p>
        A selection of applied data science, machine learning, and data
        engineering work. Most projects include code, notebooks, and
        documentation on GitHub.
      </p>
    </header>

    <!-- Data Science Projects -->
    <section class="grid">
      {dataProjects.map((p) => <ProjectCard {...p} />)}
    </section>

    <hr class="divider" />

    <!-- Frontend / Full-Stack Project -->
    <section class="grid">
      {fullStackProjects.map((p) => <ProjectCard {...p} />)}
    </section>
  </main>
</Layout>

<style>
  .wrap {
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
    color: #e5e7eb;
  }

  .header {
    margin-bottom: 2rem;
  }

  .header h1 {
    margin: 0 0 0.75rem;
    font-size: 2.5rem;
    line-height: 1.1;
  }

  .header p {
    margin: 0;
    max-width: 70ch;
    color: #cbd5e1;
    line-height: 1.6;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.25rem;
  }

  .divider {
    margin: 4rem 0;
    border: none;
    border-top: 1px solid var(--border);
    opacity: 0.6;
  }
</style>
