---
import "../styles/global.css";
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer.astro";

type Props = {
  title?: string;
  description?: string;
  ogImage?: string; // e.g. "/og/default.png"
  canonical?: string; // optional override
};

const {
  title = "Jun Clemente | Applied Data Scientist",
  description = "I build models, analyses, and data products that help teams understand outcomes and make better choices.",
  ogImage = "/og/default.png",
  canonical,
} = Astro.props;

// Use Astro.site if set in astro.config.mjs; fallback keeps dev working
const site = Astro.site?.toString() ?? "https://junclemente.github.io";
const url = canonical ?? new URL(Astro.url.pathname, site).toString();
const ogUrl = new URL(ogImage, site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Fonts: performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon-j-gradient.svg" />
    <!-- <link rel="icon" type="image/png" href="/favicon-j-gradient.png" /> -->

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={ogUrl} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogUrl} />
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
